<!--/// Navigation menu component for the application sidebar-->
<div class="top-row ps-3 navbar navbar-dark">
    
    <!--Container for branding and the mobile toggle button. -->
    <div class="container-fluid">

        <!-- Application name -->
        <a class="navbar-brand" href="">Bank of Star</a>
        
        <!--Button to toggle the navigation menu on mobile devices. -->
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<!--The collapsible container for navigation links. -->
<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        
       <!--Home/Start navigation item. -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="CreateAccount" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        
      <!--Create Account navigation item. -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="CreateAccount">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Create Account
            </NavLink>
        </div>
        
        <!--Accounts overview navigation item. -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="accounts">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Accounts
            </NavLink>
        </div>
        
        <!--New Transaction input form navigation item. -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="newtransaction">
                <span class="bi bi-arrow-left-right-nav-menu" aria-hidden="true"></span> New Transaction
            </NavLink>
        </div>
        
        <!--Transaction History navigation item. -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="history">
                <span class="bi bi-clock-history-nav-menu" aria-hidden="true"></span> History
            </NavLink>
        </div>
    </nav>
</div>

@code {
    /// <summary>
    /// Field to control the collapse state of the navigation menu on small screens.
    /// </summary>
    private bool collapseNavMenu = true;
    
    /// <summary>
    /// Gets the CSS class string based on the current collapse state.
    /// </summary>
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    /// <summary>
    /// Toggles the visibility state of the navigation menu.
    /// </summary>
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}